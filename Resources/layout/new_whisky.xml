<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"    
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"    
    android:layout_height="match_parent"  
    tools:context=".MainActivity"
    android:background="@drawable/background">  

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:title="@string/add_new_whisky_title"
            android:popupTheme="@style/AppTheme.AppBarOverlay"/>
            <!-- Bold
            android:titleTextAppearance="@style/ActionBar.AddNewWhisky"/>
            -->
    </android.support.design.widget.AppBarLayout>
    
    <TextView
        android:id="@+id/whisky_name"
        android:text="@string/whisky_name"
        android:layout_width="343.5dp"
        android:layout_height="54.5dp"
        android:layout_marginTop="80.0dp"
        android:layout_marginLeft="15.0dp"
        android:textSize="80px" 
        android:textColor="#ffffff"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120.0dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:inputType="textCapSentences"
        android:id="@+id/whisky_name_text_input" />



    <TextView
        android:id="@+id/whisky_smell"
        android:text="@string/whisky_smell"
        android:layout_width="343.5dp"
        android:layout_height="54.5dp"
        android:layout_marginTop="180.0dp"
        android:layout_marginLeft="15.0dp"
        android:textSize="80px"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/whisky_smell_rate"
        android:text="2/6"
        android:layout_width="343.5dp"
        android:layout_height="54.5dp"
        android:layout_marginTop="220.0dp"
        android:layout_marginLeft="15.0dp"
        android:gravity="center_vertical|right"
        android:textSize="80px" 
        android:textColor="#ffffff"/>

    <RatingBar
        android:id="@+id/smellRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220.0dp"
        android:maxWidth="360px"
        android:numStars="5"
        android:rating="2"    
        android:stepSize="1"
        android:theme="@style/RatingBar"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp" 
         />



    <TextView
        android:id="@+id/whisky_taste"
        android:text="@string/whisky_taste"
        android:layout_width="343.5dp"
        android:layout_height="54.5dp"
        android:layout_marginTop="300.0dp"
        android:layout_marginLeft="15.0dp"
        android:textSize="80px"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/whisky_taste_rate"
        android:text="2/6"
        android:layout_width="343.5dp"
        android:layout_height="54.5dp"
        android:layout_marginTop="340.0dp"
        android:layout_marginLeft="15.0dp"
        android:gravity="center_vertical|right"
        android:textSize="80px" 
        android:textColor="#ffffff"/>

    <RatingBar
        android:id="@+id/tasteRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340.0dp"
        android:maxWidth="360px"
        android:numStars="5"
        android:rating="2"    
        android:stepSize="1"
        android:theme="@style/RatingBar"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp" 
         />



    <TextView
        android:id="@+id/whisky_balans"
        android:text="@string/whisky_balans"
        android:layout_width="343.5dp"
        android:layout_height="54.5dp"
        android:layout_marginTop="420.0dp"
        android:layout_marginLeft="15.0dp"
        android:textSize="80px" 
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/whisky_balans_rate"
        android:text="2/6"
        android:layout_width="343.5dp"
        android:layout_height="54.5dp"
        android:layout_marginTop="460.0dp"
        android:layout_marginLeft="15.0dp"
        android:gravity="center_vertical|right"
        android:textSize="80px"
        android:textColor="#ffffff"/>

    <RatingBar
        android:id="@+id/balansRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460.0dp"
        android:maxWidth="360px"
        android:numStars="5"
        android:rating="2"    
        android:stepSize="1"
        android:theme="@style/RatingBar"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp" />



    <TextView
        android:id="@+id/whisky_finish"
        android:text="@string/whisky_finish"
        android:layout_width="343.5dp"
        android:layout_height="54.5dp"
        android:layout_marginTop="540.0dp"
        android:layout_marginLeft="15.0dp"
        android:textSize="80px" 
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/whisky_finish_rate"
        android:text="2/6"
        android:layout_width="343.5dp"
        android:layout_height="54.5dp"
        android:layout_marginTop="580.0dp"
        android:layout_marginLeft="15.0dp"
        android:gravity="center_vertical|right"
        android:textSize="80px" 
        android:textColor="#ffffff"/>

    <RatingBar
        android:id="@+id/finishRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580.0dp"
        android:maxWidth="360px"
        android:numStars="5"
        android:rating="2"    
        android:stepSize="1"
        android:theme="@style/RatingBar"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp" />



    <android.support.v7.widget.AppCompatButton
        android:text="@string/add_whisky_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_whisky_button"
        android:layout_marginTop="670.0dp"
        android:onClick="addWhisky"
        android:visibility="visible" />
</RelativeLayout>   